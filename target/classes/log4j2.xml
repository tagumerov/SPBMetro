<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
<appenders>
<Console name="Console" target="SYSTEM_OUT">
<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
</Console>

<File name="Error" fileName="logs/appError.log">
<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
</File>

<File name="SearchedStations" fileName="logs/appSearchedStations.log">
<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
</File>

<File name="MistakesInInputSearchedStations" fileName="logs/appMistakesInInputSearchedStations.log">
<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
</File>

</appenders>

<loggers>
<root level="debug">
<!--<appender-ref ref="Console" level="info"/>-->
<appender-ref ref="Error" level="error"/>
<appender-ref ref="SearchedStations" level="info"/>
<appender-ref ref="MistakesInInputSearchedStations" level="warn"/>

</root>
</loggers>
</configuration>